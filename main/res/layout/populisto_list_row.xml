<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp"
                android:requiresFadingEdge="vertical"
                android:fadingEdgeLength="80dp"
                android:ellipsize="none"


    >
    <!--+ Add New button, only visible in the first cell -->
    <Button
        android:id="@+id/pop_something_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="+ Add New"
        android:visibility="gone"
        android:textColor="#000000"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/Maybe_of_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="May be of interest:"
        android:visibility="gone"
        android:textColor="#0A7FDA"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/phone_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#000000"
        />

    <!-- date_created -->
    <TextView
        android:id="@+id/date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_user_name"
        android:textSize="15dp"
        android:textColor="#000000"
        />

    <!-- Category -->
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_created"
        android:textSize="15dp"
        android:textColor="#000000"
 />

    <!-- name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category"
        android:textSize="15dp"
        android:textColor="#000000"
 />

    <!-- name -->
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textSize="15dp"
        android:textColor="#000000"
        />

<!-- phone -->
    <TextView
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginTop="1dip"
        android:textColor="#000000"
        android:textSize="15dp" />

    <!-- comment -->
    <TextView
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginTop="1dip"
        android:textColor="#000000"
        android:textSize="15dp"
        />

</RelativeLayout>